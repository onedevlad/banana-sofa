@import "bootstrap/bootstrap/index.styl"
@import "vars.styl"

*
	margin 0
	padding 0

.order
	border-radius 10px
	color white
	background linear-gradient(top, lightYellow, yellow)
	outline none
	border none
	padding 0.5em 0.8em
	text-shadow 1px 1px 1px #262527
	box-shadow 0 6px 0 deepDarkYellow
	&:hover
		margin-top 6px
		box-shadow 0 0 0 deepDarkYellow
		background linear-gradient(top, yellow, lightYellow)
	&:active
		background deepDarkYellow
html
body
	overflow-x hidden
	width 100%
	height 100%

.container-fluid
	background #eae8eb
.screen-1
	background white
	padding 0
	margin-bottom 2%
	.overlay
		padding 1% 2%
		width 100%
		height 100%
		.header-info
			font-size 1.25em
			color #444
			.header-info-left
				height 70px
				img
					height 100%
				.delivery-desc
					margin-left 5%
			.header-info-center
				height 70px
				text-align center
				img
					opacity 0.5
					height 100%
			.header-info-right
				height 70px
				span
					display block
					margin-top calc(35px - .75em)
					font-weight bold
		.intro
			margin-top 5%
			.intro-text
				text-align center
				font-family Roboto
				.intro-main
					font-family Roboto-Black
					text-transform capitalize
					font-size 7em
					color #000
				.intro-secondary
					margin-top 1em
					display inline-block
					font-size 3em
			.intro-img
				img
					width 100%
		.order-info
			text-align center
			.price
				font-size 3em
			.button
				margin-top 1em
				font-size 2em
		.benefits
			font-size 1.5em
			li
				list-style-type none
				background url(../images/mark.svg) no-repeat left
				padding-left 2em
				line-height 2.75em

.screen-2
	background url(../images/sofa-bg.jpg)
	background-size cover
	background-position center 20%
	padding 0
	.overlay
		margin 0
		width 100%
		background rgba(0, 0, 0, 0.85)
		video
			margin-top 10%
			margin-bottom 10%

.screen-3
	color white
	.row
		margin 5% 0

@media(max-width $screen-md) // Mobile
	.screen-1
		.header-info
			.header-info-left
				text-align center
			.header-info-center
				margin 10% 0
			.header-info-right
				text-align center
		.intro
			.intro-img
				margin-top 15%
		.benefits
			display inline-block
			margin-top 15%
			margin-left 10%

@media(min-width $screen-md) // Desktop
	.screen-1
		.header-info
			.header-info-left
				text-align left
			.header-info-right
				text-align right